@{
    ViewData["Title"] = "Simple Login Test";
}

<div class="container mt-4">
    <h2>Simple Login Test</h2>
    
    <div class="row">
        <div class="col-md-6">
            <h4>Direct Login Test</h4>
            <form method="post" action="/Account/SimpleLogin">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label>Email:</label>
                    <input type="email" name="email" class="form-control" value="debug@test.com" required />
                </div>
                <div class="mb-3">
                    <label>Password:</label>
                    <input type="password" name="password" class="form-control" value="password123" required />
                </div>
                <button type="submit" class="btn btn-primary">Simple Login</button>
            </form>
        </div>
        
        <div class="col-md-6">
            <h4>Test Results</h4>
            @if (TempData["LoginResult"] != null)
            {
                <div class="alert alert-info">
                    <strong>Result:</strong><br />
                    <pre>@TempData["LoginResult"]</pre>
                </div>
            }
            
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    <strong>Error:</strong> @TempData["ErrorMessage"]
                </div>
            }
        </div>
    </div>
</div>
