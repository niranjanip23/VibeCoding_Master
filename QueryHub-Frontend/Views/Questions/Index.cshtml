@model QueryHub_Frontend.Models.QuestionListViewModel
@{
    ViewData["Title"] = "Questions";
    ViewData["SearchQuery"] = Model.SearchQuery;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2><i class="fas fa-list me-2"></i>All Questions</h2>
        @if (!string.IsNullOrEmpty(Model.SearchQuery))
        {
            <p class="text-muted mb-0">Search results for: <strong>"@Model.SearchQuery"</strong></p>
        }
        @if (!string.IsNullOrEmpty(Model.SelectedTag))
        {
            <p class="text-muted mb-0">Tagged with: <span class="badge bg-secondary">@Model.SelectedTag</span></p>
        }
    </div>
    @if (User.Identity!.IsAuthenticated)
    {
        <a asp-action="Ask" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Ask Question
        </a>
    }
</div>

<!-- Filters and Search -->
<div class="row mb-4">
    <div class="col-md-8">
        <form method="get" class="d-flex gap-2">
            <input type="text" name="search" class="form-control" placeholder="Search questions..." 
                   value="@Model.SearchQuery">
            <input type="hidden" name="tag" value="@Model.SelectedTag">
            <button type="submit" class="btn btn-outline-primary">
                <i class="fas fa-search"></i>
            </button>
            @if (!string.IsNullOrEmpty(Model.SearchQuery) || !string.IsNullOrEmpty(Model.SelectedTag))
            {
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-times"></i> Clear
                </a>
            }
        </form>
    </div>
    <div class="col-md-4 text-end">
        <span class="text-muted">@Model.TotalQuestions questions found</span>
    </div>
</div>

<!-- Popular Tags -->
<div class="mb-4">
    <h6 class="mb-2">Popular Tags:</h6>
    @foreach (var tag in Model.PopularTags)
    {
        var isSelected = tag.Equals(Model.SelectedTag, StringComparison.OrdinalIgnoreCase);
        <a asp-action="Index" asp-route-tag="@tag" asp-route-search="@Model.SearchQuery" 
           class="badge @(isSelected ? "bg-primary" : "bg-light text-dark") text-decoration-none me-1 mb-1 p-2">
            @tag
        </a>
    }
</div>

<!-- Questions List -->
@if (Model.Questions.Any())
{
    <div class="questions-container">
        @foreach (var question in Model.Questions)
        {
            <div class="card mb-3 shadow-sm question-card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-1 text-center">
                            <div class="question-stats">
                                <div class="stat-item">
                                    <div class="stat-number text-primary">
                                        <i class="fas fa-thumbs-up me-1"></i>@question.Votes
                                    </div>
                                    <div class="stat-label">question votes</div>
                                </div>
                                @if (question.AnswerVotes > 0)
                                {
                                    <div class="stat-item">
                                        <div class="stat-number text-info">
                                            <i class="fas fa-comment-dots me-1"></i>@question.AnswerVotes
                                        </div>
                                        <div class="stat-label">answer votes</div>
                                    </div>
                                }
                                <div class="stat-item @(question.IsAnswered ? "answered" : "")">
                                    <div class="stat-number @(question.IsAnswered ? "text-success" : "text-muted")">
                                        @question.AnswerCount
                                    </div>
                                    <div class="stat-label">answers</div>
                                </div>
                                <div class="stat-item">
                                    <div class="stat-number text-muted">@question.Views</div>
                                    <div class="stat-label">views</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-11">
                            <h5 class="card-title mb-2">
                                <a asp-action="Details" asp-route-id="@question.Id" 
                                   class="text-decoration-none question-title">@question.Title</a>
                                @if (question.IsAnswered)
                                {
                                    <span class="badge bg-success ms-2">
                                        <i class="fas fa-check"></i> Answered
                                    </span>
                                }
                            </h5>
                            
                            <p class="card-text text-muted mb-3">
                                @(question.Description.Length > 200 ? 
                                  question.Description.Substring(0, 200) + "..." : 
                                  question.Description)
                            </p>
                            
                            <!-- Tags -->
                            <div class="mb-2">
                                @foreach (var tag in question.TagList.Take(5))
                                {
                                    <a asp-action="Index" asp-route-tag="@tag" 
                                       class="badge bg-secondary text-decoration-none me-1">@tag</a>
                                }
                            </div>
                            
                            <!-- Question Meta -->
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="question-meta">
                                    <small class="text-muted">
                                        asked @question.CreatedDate.ToString("MMM dd, yyyy 'at' HH:mm") by
                                        <strong>@question.UserName</strong>
                                    </small>
                                </div>
                                <div class="question-actions">
                                    <a asp-action="Details" asp-route-id="@question.Id" 
                                       class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-eye me-1"></i>View
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    
    <!-- Pagination -->
    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Questions pagination">
            <ul class="pagination justify-content-center">
                @if (Model.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)" 
                           asp-route-search="@Model.SearchQuery" asp-route-tag="@Model.SelectedTag">
                            <i class="fas fa-chevron-left"></i> Previous
                        </a>
                    </li>
                }
                
                @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@i" 
                           asp-route-search="@Model.SearchQuery" asp-route-tag="@Model.SelectedTag">@i</a>
                    </li>
                }
                
                @if (Model.CurrentPage < Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)" 
                           asp-route-search="@Model.SearchQuery" asp-route-tag="@Model.SelectedTag">
                            Next <i class="fas fa-chevron-right"></i>
                        </a>
                    </li>
                }
            </ul>
        </nav>
    }
}
else
{
    <div class="text-center py-5">
        <i class="fas fa-search fa-4x text-muted mb-3"></i>
        <h4 class="text-muted">No questions found</h4>
        <p class="text-muted">
            @if (!string.IsNullOrEmpty(Model.SearchQuery) || !string.IsNullOrEmpty(Model.SelectedTag))
            {
                <span>Try adjusting your search criteria or </span>
            }
            <a asp-action="Ask" class="text-decoration-none">ask the first question</a>!
        </p>
    </div>
}
